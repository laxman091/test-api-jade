extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Register Form
        div.alert.alert-success
        <strong>Success!</strong> Indicates a successful or positive action.
        // register form
        form(method='POST' action='/')
          div.form-group
            label(for='name') First Name:
            input#name.form-control(type='text', placeholder='First Name' name='firstname')
          div.form-group
            label(for='name') Last Name:
            input#name.form-control(type='text', placeholder='Last Name' name='lastname')
          div.form-group
            label(for='extension') Extension:
            input#email.form-control(type='text', placeholder='Extension' name='extension')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='Email' name='email')
          div.form-group
            button.btn.btn-primary.btnRegister(type='button') Sign up